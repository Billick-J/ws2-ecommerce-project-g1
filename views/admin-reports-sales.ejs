<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="/css/style.css">

  <!-- Chart.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    /* Unified Admin Card */
    .admin-card {
      background: #ffd54a;
      padding: 30px;
      border-radius: var(--radius);
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
      margin-top: 25px;
    }
    .admin-card h1 { margin-bottom: 5px; }
    .admin-subtitle { color: #666; margin-bottom: 20px; font-size: 15px; }

    /* Admin Nav */
    .admin-nav { display: flex; gap: 12px; margin-bottom: 20px; flex-wrap: wrap; }
    .admin-nav a {
      padding: 10px 16px; background: var(--brand); color: white;
      text-decoration: none; border-radius: 6px; transition: 0.2s; font-size: 14px;
    }
    .admin-nav a:hover { opacity: 0.85; }

    /* Filters */
    .filters-row { display: flex; flex-wrap: wrap; gap: 15px; align-items: flex-end; margin-bottom: 30px; }
    .filters-item { display: flex; flex-direction: column; }
    .filters-item input, .filters-item select {
      height: 36px; padding: 0 8px; border-radius: 4px; border: 1px solid #ccc;
      font-size: 14px; box-sizing: border-box;
    }
    .filters-buttons { display: flex; gap: 10px; align-items: center; flex-wrap: wrap; }
    .filters-buttons button {
      padding: 0 12px; height: 36px; border: none; border-radius: 6px;
      background: var(--brand); color: #fff; cursor: pointer; font-weight: 500; transition: 0.2s;
    }
    .filters-buttons button:hover { opacity: 0.85; }
    .clear-btn { display: inline-block; padding: 0 12px; height: 36px; line-height: 36px;
      background: #ccc; color: #333; border-radius: 6px; text-decoration: none; transition: 0.2s; }
    .clear-btn:hover { background: #bbb; color: #111; }

    /* Table */
    table { width: 100%; border-collapse: collapse; margin-top: 10px; }
    th { background: #f5f5f5; text-align: left; padding: 10px; border-bottom: 1px solid #ddd; font-weight: bold; }
    td { padding: 10px; border-bottom: 1px solid #eee; }
    tr:hover td { background: #fafafa; }

    /* Summary cards */
    .summary-cards { display: flex; gap: 15px; flex-wrap: wrap; margin-bottom: 20px; }
    .summary-card { background: white; padding: 15px 20px; border-radius: var(--radius); flex: 1; min-width: 150px; box-shadow: 0 1px 4px rgba(0,0,0,0.1); }
    .summary-card h3 { font-size: 13px; margin-bottom: 5px; color: #666; }
    .summary-card p { font-size: 18px; font-weight: bold; margin: 0; }

    .chart-container {
    background: white;
    padding: 20px;
    border-radius: var(--radius);
    box-shadow: 0 1px 4px rgba(0,0,0,0.1);
    margin-top: 25px;

    /* let Chart.js handle height */
    height: auto;
    position: relative; /* required for responsive chart */
    }

    #salesChartCanvas {
    width: 100% !important;
    height: 300px !important; /* fixed visible height */
    display: block;
    }

    @media (max-width: 768px) {
      .filters-row { flex-direction: column; gap: 15px; }
      .filters-buttons { justify-content: flex-start; }
    }

    @media print {
    .no-print, .header, .nav { display: none !important; }

    body { margin: 10mm; font-family: Arial, sans-serif; }

    section { margin-bottom: 12px; }

    h1 { font-size: 20px; }
    h2 { font-size: 16px; }

    table th, table td {
        border: 1px solid #999 !important;
        padding: 6px !important;
    }

    table tr:nth-child(even) td { background-color: #f9f9f9 !important; }
    table th { background-color: #ddd !important; }
    table, tr, td, th { page-break-inside: avoid; }

    #salesChartCanvas {
        width: 100% !important;
        height: auto !important;
        max-height: 250px !important;
    }

    .summary-cards { flex-direction: column; gap: 10px; }
    }

  </style>
</head>

<body>

<header class="header">
  <div class="brand">Nemy's Gunpla & Collectibles</div>
  <nav class="nav">
    <a href="/">Home</a>
    <a href="/products">Products</a>
    <a href="/about">About</a>
    <a href="/contact">Contact</a>

    <% if (!user) { %>
      <a href="/users/login">Login</a>
      <a href="/users/register">Register</a>
    <% } else { %>
      <% if (user.role === "admin") { %>
        <a href="/admin">Admin</a>
      <% } else { %>
        <a href="/user/dashboard">Dashboard</a>
      <% } %>
      <a href="/users/logout">Logout</a>
    <% } %>
  </nav>
</header>

<div class="container">
  <div class="admin-card">
    <h1>Sales Overview</h1>
    <div class="admin-subtitle">Track sales per day, total orders, and revenue trends.</div>

    <!-- Admin Nav -->
    <div class="admin-nav no-print">
      <a href="/admin/products">Manage Products</a>
      <a href="/admin/orders">Manage Orders</a>
      <a href="/admin/reports/sales">View Sales Reports</a>
      <a href="/">Back to Shop</a>
    </div>

    <!-- Report Actions -->
    <section class="no-print" style="margin-bottom: 15px;">
      <h2>Report Actions</h2>
      <p>
        <a href="/admin/reports/sales/export/daily?startDate=<%= filters.startDate %>&endDate=<%= filters.endDate %>&status=<%= filters.status %>">
          Download Daily Sales (XLSX)
        </a>
      </p>
      <p>
        <a href="/admin/reports/sales/export/orders?startDate=<%= filters.startDate %>&endDate=<%= filters.endDate %>&status=<%= filters.status %>">
          Download Detailed Orders (XLSX)
        </a>
      </p>

      <p>
        <button type="button" id="printBtn">Print / Save as PDF</button>
      </p>

    </section>

    <!-- Filters -->
    <section class="no-print">
      <h2>Filters</h2>
      <form action="/admin/reports/sales" method="GET">
        <div class="filters-row">
          <div class="filters-item">
            <label>Start Date</label>
            <input type="date" name="startDate" value="<%= filters.startDate %>">
          </div>
          <div class="filters-item">
            <label>End Date</label>
            <input type="date" name="endDate" value="<%= filters.endDate %>">
          </div>
          <div class="filters-item">
            <label>Status</label>
            <select name="status">
              <option value="all" <%= filters.status === "all" ? "selected" : "" %>>All</option>
              <option value="completed" <%= filters.status === "completed" ? "selected" : "" %>>Completed</option>
              <option value="to_pay" <%= filters.status === "to_pay" ? "selected" : "" %>>To Pay</option>
              <option value="to_ship" <%= filters.status === "to_ship" ? "selected" : "" %>>To Ship</option>
              <option value="to_receive" <%= filters.status === "to_receive" ? "selected" : "" %>>To Receive</option>
              <option value="refund" <%= filters.status === "refund" ? "selected" : "" %>>Return/Refund</option>
              <option value="cancelled" <%= filters.status === "cancelled" ? "selected" : "" %>>Cancelled</option>
            </select>
          </div>
          <div class="filters-buttons">
            <button type="submit">Apply Filters</button>
            <a href="/admin/reports/sales" class="clear-btn">Clear</a>
          </div>
        </div>
      </form>
    </section>

    <!-- Filter Summary -->
    <section>
      <h2>Current Filter Summary</h2>
      <% if (!filters.startDate && !filters.endDate && filters.status === 'all') { %>
        <p>Showing all orders for all dates and all statuses.</p>
      <% } else { %>
        <p>
          Showing orders
          <% if (filters.status === 'all') { %>with all statuses<% } else { %>with status "<%= filters.status %>"<% } %>
          <% if (filters.startDate && filters.endDate) { %>
            from <%= filters.startDate %> to <%= filters.endDate %>.
          <% } else if (filters.startDate) { %>
            from <%= filters.startDate %> onwards.
          <% } else if (filters.endDate) { %>
            up to <%= filters.endDate %>.
          <% } else { %>
            for all dates.
          <% } %>
        </p>
      <% } %>
    </section>

    <!-- Summary Section -->
    <h2>Summary</h2>
    <% if (dailySales.length === 0) { %>
      <p>No sales data found for selected filters.</p>
    <% } else { %>
      <div class="summary-cards">
        <div class="summary-card">
          <h3>Total Sales</h3>
          <p>₱<%= summary.totalSales.toFixed(2) %></p>
        </div>
        <div class="summary-card">
          <h3>Total Orders</h3>
          <p><%= summary.totalOrders %></p>
        </div>
        <div class="summary-card">
          <h3>Average Order Value</h3>
          <p>₱<%= summary.averageOrderValue.toFixed(2) %></p>
        </div>
      </div>
    <% } %>

    <!-- Daily Sales Table -->
    <h2>Daily Sales Table</h2>
    <% if (dailySales.length === 0) { %>
      <p>No daily sales to display.</p>
    <% } else { %>
      <table>
        <tr>
          <th>Date</th>
          <th>Total Sales</th>
          <th>Number of Orders</th>
        </tr>
        <% dailySales.forEach(day => { %>
          <tr>
            <td><%= day.date %></td>
            <td>₱<%= Number(day.totalSales).toFixed(2) %></td>
            <td><%= day.orderCount %></td>
          </tr>
        <% }) %>
      </table>
    <% } %>

    <!-- Sales Chart -->
    <section class="chart-container">
        <h2>Sales Chart</h2>
        <% if (dailySales.length === 0) { %>
            <p>No sales data to chart.</p>
        <% } else { %>
            <canvas id="salesChartCanvas"
            data-labels='<%- JSON.stringify(labels) %>'
            data-sales='<%- JSON.stringify(salesData) %>'></canvas>
        <% } %>
    </section>


  </div>

  <footer class="footer">
    <a href="#">Terms & Conditions</a> · 
    <a href="#">Privacy Policy</a>
  </footer>

</div>

<!-- External Chart script -->
<script src="/js/salesChart.js"></script>

</body>
</html>
