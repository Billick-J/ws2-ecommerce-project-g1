<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="brand">Nemy's Gunpla & Collectibles</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <% if (user && user.role === "customer") { %>
          <a href="/cart">Cart</a>
        <% } %>
        
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <% if (!user) { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } else { %>
          <% if (user.role === "admin") { %>
            <a href="/admin">Admin</a>
          <% } else { %>
            <a href="/user/dashboard">Dashboard</a>
          <% } %>
          <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
    </header>

    <section class="card">
      <h1>Order <%= order.orderId %></h1>
      <p><strong>Customer:</strong> <%= order.userEmail %></p>
      <p><strong>Status:</strong> <%= order.orderStatus %></p>
      <p><strong>Total:</strong> ₱<%= Number(order.totalAmount).toFixed(2) %></p>
      <p><strong>Created At:</strong> <%= order.createdAt.toLocaleString() %></p>

      <h2>Items</h2>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% order.items.forEach(item => { %>
            <tr>
              <td><%= item.name %></td>
              <td>₱<%= Number(item.price).toFixed(2) %></td>
              <td><%= item.quantity %></td>
              <td>₱<%= Number(item.subtotal).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </div>
</body>
</html>