<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .cart-card {
      background: #fff;
      padding: 20px;
      border-radius: var(--radius);
      box-shadow: 0 1px 6px rgba(0,0,0,0.1);
      margin-top: 25px;
    }

    .cart-card h1 {
      margin-bottom: 15px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    table th, table td {
      padding: 10px;
      border: 1px solid #ddd;
      text-align: left;
    }

    table th {
      background-color: #f5f5f5;
    }

    tr:hover td {
      background-color: #fafafa;
    }

    .quantity-controls {
      display: flex;
      gap: 5px;
      align-items: center;
    }

    .quantity-controls button {
      width: 25px;
      height: 25px;
      background: var(--brand);
      color: #fff;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      font-weight: bold;
      line-height: 1;
      transition: 0.2s;
    }

    .quantity-controls button:hover { opacity: 0.85; }

    .delete-btn {
      background: #e53935;
      color: #fff;
      border: none;
      padding: 4px 8px;
      border-radius: 3px;
      cursor: pointer;
      transition: 0.2s;
    }

    .delete-btn:hover { opacity: 0.85; }

    .cart-total {
      text-align: right;
      font-weight: bold;
      margin-top: 10px;
      font-size: 18px;
    }

    .checkout-btn {
      display: inline-block;
      padding: 10px 20px;
      background: var(--brand);
      color: #fff;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 500;
      transition: 0.2s;
      text-decoration: none;
    }

    .checkout-btn:hover {
      opacity: 0.85;
    }

    .empty-cart {
      text-align: center;
      font-style: italic;
      color: #666;
      margin-top: 20px;
    }
  </style>
</head>

<body>
  <header class="header">
    <div class="brand">Nemy's Gunpla & Collectibles</div>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <% if (user && user.role === "customer") { %>
        <a href="/cart">Cart</a>
      <% } %>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>

      <% if (!user) { %>
        <a href="/users/login">Login</a>
        <a href="/users/register">Register</a>
      <% } else { %>
        <% if (user.role === "admin") { %>
          <a href="/admin">Admin</a>
        <% } else { %>
          <a href="/user/dashboard">Dashboard</a>
        <% } %>
        <a href="/users/logout">Logout</a>
      <% } %>
    </nav>
  </header>

  <div class="container">
    <div class="cart-card">
      <h1>Your Cart</h1>

      <% if (!cart || cart.length === 0) { %>
        <p class="empty-cart">Your cart is empty.</p>
      <% } else { %>
        <form id="cartForm" action="/orders/checkout" method="POST">
          <table>
            <thead>
              <tr>
                <th><input type="checkbox" id="selectAll"></th>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% let total = 0; %>
              <% cart.forEach((item, index) => { %>
                <% const subtotal = item.price * item.quantity; %>
                <% total += subtotal; %>
                  <tr class="cart-row" data-price="<%= item.price %>">
                    <td><input type="checkbox" class="item-checkbox" value="<%= item.productId %>"></td>
                    <td><%= item.name %></td>
                    <td>₱<%= item.price.toFixed(2) %></td>
                    <td>
                      <button type="button" class="decrease-btn">-</button>
                      <span class="quantity"><%= item.quantity %></span>
                      <button type="button" class="increase-btn">+</button>
                    </td>
                    <td class="cart-subtotal">₱<%= (item.price * item.quantity).toFixed(2) %></td>
                    <td>
                      <button type="button" class="delete-btn">Remove</button>
                    </td>
                  </tr>
              <% }) %>
            </tbody>
          </table>

          <div class="cart-total">Total: ₱<span id="totalAmount"><%= total.toFixed(2) %></span></div>
          <button type="submit" class="checkout-btn">Proceed to Checkout</button>
        </form>
      <% } %>
    </div>
  </div>

  <script src="/js/cart.js"></script>
</body>
</html>
