<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">

  <style>
    body {
      margin: 0;
      padding-top: 80px;
    }

    .product-details {
      display: flex;
      gap: 2rem;
      justify-content: center;
      padding: 2rem;
      flex-wrap: wrap;
    }

    .product-image {
      width: 450px;
      aspect-ratio: 1 / 1;
      overflow: hidden;
      border-radius: 10px;
      background: #f2f2f2;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
    }

    .product-image img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      border-radius: 10px;
      transition: transform 0.4s ease, opacity 0.3s ease;
    }

    .product-image:hover img {
      transform: scale(1.5);
    }

    .image-gallery {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 1rem;
      flex-wrap: wrap;
    }

    .image-gallery img {
      width: 90px;
      height: 90px;
      object-fit: cover;
      border-radius: 8px;
      cursor: pointer;
      transition: transform 0.2s, opacity 0.2s, border 0.2s;
      opacity: 0.8;
      border: 2px solid transparent;
    }

    .image-gallery img:hover {
      transform: scale(1.05);
      opacity: 1;
    }

    .image-gallery img.active {
      border: 2px solid #2563eb;
      opacity: 1;
    }

    .product-info {
      max-width: 400px;
    }

    .add-to-cart {
      background: var(--brand);
      color: #fff;
      border: none;
      padding: 10px 16px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 15px;
      margin-top: 10px;
    }

    .price {
      font-size: 1.3rem;
      font-weight: bold;
      margin-top: 10px;
      color: var(--brand);
    }
  </style>
</head>

<body>
  <div class="container">
    <header class="header">
      <div class="brand">Nemy's Gunpla & Collectibles</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <% if (!user) { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } else { %>
          <a href="/users/dashboard">Dashboard</a>
          <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
    </header>

    <section class="product-details">
      <div class="product-image">
        <img id="main-image" src="<%= product.image %>" alt="<%= product.name %>">
      </div>

      <div class="image-gallery" id="gallery">
        <% 
          const allImages = [product.image, ...(product.images || [])];
          allImages.forEach((img, index) => { 
        %>
          <img 
            src="<%= img %>" 
            alt="<%= product.name %>" 
            class="<%= index === 0 ? 'active' : '' %>" 
            data-index="<%= index %>"
          >
        <% }) %>
      </div>

      <div class="product-info">
        <h1><%= product.name %></h1>
        <p><%= product.desc %></p>
        <p><%= product.details %></p>
        <div class="price"><%= product.price %></div>
        <button class="add-to-cart">Add to Cart</button>
      </div>
    </section>

    <footer class="footer">
      <a href="#">Terms & Conditions</a> Â· <a href="#">Privacy Policy</a>
    </footer>
  </div>

  <!-- Fullscreen Image Modal -->
  <div id="fullscreen-modal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.9); justify-content:center; align-items:center; z-index:1000;">
    <img id="fullscreen-img" src="" style="max-width:90%; max-height:90%; border-radius:10px;">
  </div>

  <script src="/js/product-gallery.js"></script>
</body>
</html>
