<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .product-container {
      display: flex;
      gap: 24px;
      margin-top: 20px;
      flex-wrap: wrap;
    }
    .slider {
      flex: 1 1 400px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    .slider-main img {
      width: 100%;
      max-height: 400px;
      object-fit: contain;
      border-radius: 8px;
    }
    .slider-thumbs {
      display: flex;
      gap: 6px;
      overflow-x: auto;
    }
    .slider-thumbs img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      cursor: pointer;
      border-radius: 6px;
      border: 2px solid transparent;
    }
    .slider-thumbs img.active {
      border-color: var(--brand);
    }
    .product-details {
      flex: 1 1 300px;
    }
    .product-details h2 {
      margin-top: 0;
    }
    .product-details p {
      line-height: 1.4;
    }
  </style>
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="brand">Nemy's Gunpla & Collectibles</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <% if (user && user.role === "customer") { %>
          <a href="/cart">Cart</a>
        <% } %>
        
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <% if (!user) { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } else { %>
          <% if (user.role === "admin") { %>
            <a href="/admin">Admin</a>
          <% } else { %>
            <a href="/user/dashboard">Dashboard</a>
          <% } %>
          <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
    </header>

    <section class="product-container">
      <!-- Image Slider -->
      <div class="slider">
        <div class="slider-main">
          <img id="mainImage" src="<%= product.images && product.images.length ? product.images[0] : product.image %>" alt="<%= product.name %>">
        </div>
        <div class="slider-thumbs">
          <% if (product.images && product.images.length) { %>
            <% product.images.forEach((img, idx) => { %>
              <img src="<%= img %>" 
              alt="Thumbnail <%= idx+1 %>" 
              class="thumb <%= idx === 0 ? 'active' : '' %>" 
              data-src="<%= img %>">
            <% }) %>
          <% } %>
        </div>
      </div>

      <!-- Product Details -->
      <div class="product-details">
        <h2><%= product.name %></h2>
        <p><strong>Price:</strong> â‚±<%= product.price %></p>
        <p><%= product.desc %></p>

        <% if (user) { %>
          <form action="/cart/add" method="POST">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <button type="submit">Add to Cart</button>
          </form>
        <% } %>
      </div>
    </section>
  </div>

  <script src="/js/product-details.js"></script>
</body>
</html>
