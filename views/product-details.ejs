<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    /* Slider container and individual image styling */
    .product-details {
      display: flex;
      gap: 2rem;
      justify-content: center;
      padding: 2rem;
    }

    .image-slider {
      width: 450px;
      position: relative;
    }

    .image-slider img {
      width: 100%;
      border-radius: 10px;
      cursor: zoom-in;
    }

    .image-thumbnails {
      display: flex;
      gap: 10px;
      margin-top: 1rem;
    }

    .image-thumbnails img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 10px;
      cursor: pointer;
    }

    .arrow-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      font-size: 30px;
      background: rgba(0, 0, 0, 0.5);
      color: white;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 50%;
      z-index: 10;
    }

    .arrow-left {
      left: 10px;
    }

    .arrow-right {
      right: 10px;
    }

    .zoomed-image {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: none;
      max-width: 80%;
      max-height: 80%;
      z-index: 9999;
      cursor: zoom-out;
      background: rgba(0,0,0,0.8);
      padding: 10px;
      border-radius: 8px;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header / Navbar -->
    <header class="header">
      <div class="brand">Nemy's Gunpla & Collectibles</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <% if (!user) { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } else { %>
          <a href="/users/dashboard">Dashboard</a>
          <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
    </header>

    <!-- Product Details Section -->
    <section class="product-details">
      <div class="image-slider">
        <img id="main-image" src="<%= product.image %>" alt="<%= product.name %>">
        <button class="arrow-btn arrow-left" onclick="prevImage()">&#10094;</button>
        <button class="arrow-btn arrow-right" onclick="nextImage()">&#10095;</button>

        <!-- Zoomed Image -->
        <img id="zoomed-image" class="zoomed-image" src="<%= product.image %>" alt="<%= product.name %>">

        <!-- Thumbnails -->
        <div class="image-thumbnails">
          <% product.images.forEach((image, index) => { %>
            <img src="<%= image %>" alt="<%= product.name %>">
          <% }) %>
        </div>
      </div>

      <div class="product-info">
        <h1><%= product.name %></h1>
        <p><%= product.desc %></p>
        <p><%= product.details %></p>
        <div class="price"><%= product.price %></div>
        <button class="add-to-cart">Add to Cart</button>
      </div>
    </section>

    <footer class="footer">
      <a href="#">Terms & Conditions</a> · <a href="#">Privacy Policy</a>
    </footer>
  </div>

    <!-- Hidden JSON data for product images -->
<script id="product-data" type="application/json">
    <%- JSON.stringify(product.images) %>
  </script>
  
  <script>
    // ✅ Combine main image + gallery images
    let productImages = JSON.parse(document.getElementById("product-data").textContent);
    productImages.unshift("<%= product.image %>");
  
    let currentImageIndex = 0;
  
    // Update displayed image
    function changeImage(imageSrc) {
      document.getElementById("main-image").src = imageSrc;
      document.getElementById("zoomed-image").src = imageSrc;
    }
  
    // Arrow navigation
    function prevImage() {
      currentImageIndex = (currentImageIndex - 1 + productImages.length) % productImages.length;
      changeImage(productImages[currentImageIndex]);
    }
  
    function nextImage() {
      currentImageIndex = (currentImageIndex + 1) % productImages.length;
      changeImage(productImages[currentImageIndex]);
    }
  
    // ✅ Add event listeners to thumbnails
    document.querySelectorAll('.image-thumbnails img').forEach((img, index) => {
      img.addEventListener('click', () => {
        currentImageIndex = index + 1; // +1 because we unshifted the main image
        changeImage(img.src);
      });
    });
  
    // ✅ Zoom functionality
    const mainImage = document.getElementById("main-image");
    const zoomedImage = document.getElementById("zoomed-image");
  
    mainImage.addEventListener("click", () => {
      zoomedImage.style.display = "block";
    });
  
    zoomedImage.addEventListener("click", () => {
      zoomedImage.style.display = "none";
    });
  </script>
  
</body>
</html>
