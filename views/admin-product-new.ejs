<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="brand">Nemy's Gunpla & Collectibles</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <% if (user && user.role === "customer") { %>
          <a href="/cart">Cart</a>
        <% } %>
        
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <% if (!user) { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } else { %>
          <% if (user.role === "admin") { %>
            <a href="/admin">Admin</a>
          <% } else { %>
            <a href="/user/dashboard">Dashboard</a>
          <% } %>
          <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
    </header>

    <section class="card">
      <h1>Add New Product</h1>

      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div style="color:red;margin-bottom:15px;">
          <p>Please fix the following errors:</p>
          <ul>
            <% errors.forEach(err => { %>
              <li><%= err %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <form action="/admin/products/new" method="POST" enctype="multipart/form-data" class="form-row">
        <label>Name:
          <input type="text" name="name" value="<%= formData?.name || '' %>" required>
        </label>

        <label>Description:
          <textarea name="desc" required><%= formData?.desc || '' %></textarea>
        </label>

        <label>Price:
          <input type="text" name="price" value="<%= formData?.price || '' %>" required>
        </label>

        <label>Category:
          <input type="text" name="category" value="<%= formData?.category || '' %>" required>
        </label>

        <label>Upload Images (choose multiple): 
          <input type="file" name="images" multiple accept="image/*">
        </label>

        <button type="submit">Add Product</button>
        <a href="/admin/products" class="btn" style="margin-top:10px;">← Back to Products</a>
      </form>
    </section>

    <footer class="footer">
      <a href="#">Terms & Conditions</a> · <a href="#">Privacy Policy</a>
    </footer>
  </div>
</body>
</html>
