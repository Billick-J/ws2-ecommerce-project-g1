<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="brand">Nemy's Gunpla & Collectibles</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <% if (!user) { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } else { %>
          <a href="/users/dashboard">Dashboard</a>
          <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
    </header>

    <section class="card">
      <h1>Welcome, <%= user.firstName %>!</h1>

      <p>Email: <%= user.email %></p>
      <p>Role: <%= user.role %></p>

      <% if (user.role === 'admin') { %>
        <div class="admin-links" style="margin-top:20px;">
          <h2>Admin Links</h2>
          <a href="/admin/products" class="btn" style="margin-right:12px;">Manage Products</a><br>
          <a href="/admin/products/new" class="btn">Add New Product</a><br>
          <a href="/admin" class="btn" style="margin-top:10px;">View All Users</a><br>
          <a href="/admin/orders">View All Orders</a>
        </div>
      <% } %>
    </section>

    <footer class="footer">
      <a href="#">Terms & Conditions</a> Â· <a href="#">Privacy Policy</a>
    </footer>
  </div>
</body>
</html>
