<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">

    <header class="header">
    <div class="brand">Nemy's Gunpla & Collectibles</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <% if (user && user.role === "customer") { %>
          <a href="/cart">Cart</a>
        <% } %>
        
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <% if (!user) { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } else { %>
          <% if (user.role === "admin") { %>
            <a href="/admin">Admin</a>
          <% } else { %>
            <a href="/user/dashboard">Dashboard</a>
          <% } %>
          <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
  </header>

    <!-- Welcome Section -->
    <section class="card" style="text-align:center; margin-bottom:20px;">
      <h1>Welcome to Nemy's Gunpla & Collectibles</h1>
      <p>Your one-stop shop for model kits and collectibles</p>
    </section>

    <!-- Products Section -->
    <section class="card">
      <h1>Featured Products</h1>
      <div class="products">
        <% products.forEach(p => { %>
          <div class="card product">
            <a href="/products/<%= p._id %>" class="product-link">
              <div class="image">
                <img src="<%= (p.images && p.images.length > 0) ? p.images[0] : '/images/default-product.jpeg' %>" 
                     alt="<%= p.name %>" style="max-height:120px">
              </div>
              <h3><%= p.name %></h3>
              <strong>₱<%= p.price %></strong>
            </a>
            <% if (user) { %>
              <form action="/cart/add" method="POST" style="margin-top:8px;">
                <input type="hidden" name="productId" value="<%= p._id %>">
                <button type="submit">Add to Cart</button>
              </form>
            <% } %>
          </div>
        <% }) %>
      </div>
    </section>

    <footer class="footer">
      <a href="#">Terms & Conditions</a> · <a href="#">Privacy Policy</a>
    </footer>
  </div>
</body>
</html>
