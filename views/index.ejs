<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="brand">Nemy's Gunpla & Collectibles</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>

        <% if (!user) { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } else { %>
          <a href="/users/dashboard">Dashboard</a>
          <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
    </header>

    <section class="card">
      <h1>Welcome to Nemy's Gunpla & Collectibles</h1>
      <p>Your one-stop shop for model kits and collectibles.</p>
      <div class="products">
        <% products.forEach(p=>{ %>
          <div class="card product">
            <div class="image"><img src="<%= p.image %>" alt="<%= p.name %>" style="max-height:120px">
            </div>
            <h3><%= p.name %></h3>
            <p><%= p.desc %></p>
            <strong><%= p.price %></strong>
            <div style="margin-top:8px"><button>Add to Cart</button></div>
          </div>
        <% }) %>
      </div>
    </section>

    <footer class="footer">
      <a href="#">Terms & Conditions</a> Â· <a href="#">Privacy Policy</a>
    </footer>
  </div>
</body>
</html>
