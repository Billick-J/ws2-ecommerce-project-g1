<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <!-- Navigation Bar -->
    <header class="header">
      <div class="brand">Nemy's Gunpla & Collectibles</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <a href="/cart">Cart</a> <!-- ✅ New Cart link -->
        <a href="/about">About</a>
        <a href="/contact">Contact</a>

        <% if (!user) { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } else { %>
          <a href="/users/dashboard">Dashboard</a>
          <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
    </header>

    <!-- Products Section -->
    <section class="card">
      <h1>Our Products</h1>
      <div class="products">
        <% products.forEach(p => { %>
          <div class="card product">
            <a href="/products/<%= p._id %>" class="product-link">
              <div class="image">
                <img src="<%= (p.images && p.images.length > 0) ? p.images[0] : '/images/default-product.jpeg' %>" alt="<%= p.name %>" style="max-height:120px">
              </div>
              <h3><%= p.name %></h3>
              <strong>₱<%= p.price %></strong>
            </a>
            <% if (user) { %>
              <form action="/cart/add" method="POST" style="margin-top:8px;">
                <input type="hidden" name="productId" value="<%= p._id %>">
                <input type="number" name="quantity" value="1" min="1" style="width:60px;">
                <button type="submit">Add to Cart</button>
              </form>
            <% } %>
          </div>
        <% }) %>
      </div>      
    </section>

    <footer class="footer">
      <a href="#">Terms & Conditions</a> · <a href="#">Privacy Policy</a>
    </footer>
  </div>
</body>
</html>