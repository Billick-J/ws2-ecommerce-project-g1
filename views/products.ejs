<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <!-- Navigation Bar -->
    <header class="header">
      <div class="brand">Nemy's Gunpla & Collectibles</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>

        <% if (!user) { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } else { %>
          <a href="/users/dashboard">Dashboard</a>
          <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
    </header>

    <!-- Products Section -->
    <section class="card">
      <h1>Our Products</h1>
      <div class="products">
        <% products.forEach(p => { %>
          <a href="/products/<%= p.id %>" class="product-link">
            <div class="card product">
              <div class="image">
                <img src="<%= p.image %>" alt="<%= p.name %>" style="max-height:120px">
              </div>
              <h3><%= p.name %></h3>
              <p><%= p.desc %></p>
              <strong><%= p.price %></strong>
            </div>
          </a>
        <% }) %>
      </div>      
    </section>

    <footer class="footer">
      <a href="#">Terms & Conditions</a> Â· <a href="#">Privacy Policy</a>
    </footer>
  </div>
</body>
</html>
