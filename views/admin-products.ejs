<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="brand">Nemy's Gunpla & Collectibles</div>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/products">Products</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>

        <% if (!user) { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } else { %>
          <a href="/user/dashboard">Dashboard</a>
          <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
    </header>

    <section class="card">
      <h1>Admin: Products</h1>

      <div style="margin-bottom: 12px;">
        <a href="/admin/products/new" class="btn" style="margin-right: 12px;">Add New Product</a>
        <a href="/admin" class="btn">View All Users</a>
      </div>

      <div class="products">
        <% products.forEach(p => { %>
          <div class="card product">
            <div class="image">
              <img src="<%= p.images && p.images.length > 0 ? p.images[0] : '/images/default-product.jpeg' %>" alt="<%= p.name %>" style="max-height:120px">
            </div>
            <h3><%= p.name %></h3>
            <p><%= p.desc %></p>
            <strong><%= p.price %></strong>
            <div style="margin-top:8px;">
              <a href="/admin/products/edit/<%= p._id %>" class="btn" style="margin-right:6px;">Edit</a>
              <form action="/admin/products/delete/<%= p._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn" style="background:#d33;">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <footer class="footer">
      <a href="#">Terms & Conditions</a> Â· <a href="#">Privacy Policy</a>
    </footer>
  </div>
</body>
</html>
